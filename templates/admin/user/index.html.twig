{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Email</th>
                <th>Geburtstag</th>
                <th>Geschlecht</th>
                <th>Telefon</th>
                <th>TelefonMobil</th>
                <th>Strasse</th>
                <th>Hausnummer</th>
                <th>Plz</th>
                <th>Ort</th>
                <th>Pilot</th>
                <th>MbsLizenz</th>
                <th>Ms11Lizenz</th>
                <th>RennLizenz</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Verified</th>
                <th>RegisterIpAddress</th>
                <th>RegisterHostname</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.vorname }}</td>
                <td>{{ user.nachname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.geburtstag ? user.geburtstag|date('Y-m-d') : '' }}</td>
                <td>{{ user.geschlecht }}</td>
                <td>{{ user.telefon }}</td>
                <td>{{ user.telefonMobil }}</td>
                <td>{{ user.strasse }}</td>
                <td>{{ user.hausnummer }}</td>
                <td>{{ user.plz }}</td>
                <td>{{ user.ort }}</td>
                <td>{{ user.pilot ? 'Yes' : 'No' }}</td>
                <td>{{ user.mbsLizenz }}</td>
                <td>{{ user.ms11Lizenz }}</td>
                <td>{{ user.rennLizenz }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.verified ? 'Yes' : 'No' }}</td>
                <td>{{ user.registerIpAddress }}</td>
                <td>{{ user.registerHostname }}</td>
                <td>
                    <a href="{{ path('app_admin_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="23">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_new') }}">Create new</a>
{% endblock %}
