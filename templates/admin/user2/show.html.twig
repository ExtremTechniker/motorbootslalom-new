{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th colspan="2">Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th colspan="2">Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th colspan="2">Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th colspan="2">Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th colspan="2">Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th colspan="2">Verified</th>
                <td>{{ user.verified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th colspan="2">RegisterIpAddress</th>
                <td>{{ user.registerIpAddress }}</td>
            </tr>
            <tr>
                <th colspan="2">RegisterHostname</th>
                <td>{{ user.registerHostname }}</td>
            </tr>
            <tr>
                <th>Person</th>
                <th>Id</th>
                <td>{{ user.person.id }}</td>
            </tr>
            <tr>
                <th>Institutionen</th>
                <td>{{ user.person.institutionen|json_encode }}</td>
            </tr>
            <tr>
                <th>Vorname</th>
                <td>{{ user.person.vorname }}</td>
            </tr>
            <tr>
                <th>Nachname</th>
                <td>{{ user.person.nachname }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_index') }}">back to list</a>

    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
